.footer-box{
  width: 690rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #01AF66;
border-radius: 10px;
color: #fff;
margin-left: 30rpx;
font-family: PingFangSC-Regular;
font-size: 36rpx;
position: fixed;
bottom: 4vh;
}

.ordertime{
  display: flex;
  justify-content: space-between;
  padding:0 30rpx;
  border-bottom: 1px solid #E4E5EA;
  height: 70rpx;
  line-height: 70rpx;
  color: #9399A5;
}