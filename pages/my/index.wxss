.body{
  width:100%;
height:100vh;
background-color:rgb(249,249,251);

}
.bg{
  width: 100%;
  height:280rpx;
}
.bg image{
  width: 100%;
  height: 100%;
}
.info-box {
  height: 280rpx;
  width: 100%;
  /* background: #01AF66; */
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
}
.info-box image {
  width: 140rpx;
  height: 140rpx;
  border: 4rpx solid rgba(255,255,255,0.15);
  border-radius: 16rpx;
  margin-left: 40rpx;
}
.info-box text {
  font-size: 48rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  margin-left: 30rpx;
}
.my-list {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}
.my-item {
  height: 120rpx;
  width: 100%;
  /* padding: 0 40rpx; */
  display: flex;
  align-items: center;
}
.item-icon {
  width: 44rpx;
  height: 44rpx;
}
.item-tip {
  flex: 1;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #E4E5EA;
  width: 626rpx;
  height:120rpx;
  line-height:120rpx;

}
.right-arrow {
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}
.right-arrow:after {
  display: inline-block;
	content: '';
	height: 20rpx;
	width: 20rpx;
	border-width: 1rpx 1rpx 0 0;
	border-color: #cccccc;
	border-style: solid;
	transform: rotate(45deg);
}
.icon-con{
  width:124rpx;
text-align:center;
vertical-align:middle;
display:flex;
align-items:center;
justify-content:center;

}