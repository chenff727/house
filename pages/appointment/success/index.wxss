/**index.wxss**/
.appointment-status-box {
  width: 100%;
  height: 412rpx;
  background: #FFFFFF;
  box-shadow: 0 1rpx 1rpx 0 #E4E5EA;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.appointment-status-box image {
  width: 196rpx;
  height: 114rpx;
  margin-top: 60rpx;
}
.appointment-status {
  font-size: 34rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
  margin-top: 30rpx;
}
.appointment-tip {
  width: 690rpx;
  font-size: 28rpx;
  color: #CCCCCC;
  letter-spacing: 0;
  text-align: center;
  margin-top: 20rpx;
}
.house-list-box {
  width: 100%;
}
.house-list {
  width: 690rpx;
  margin: 0 auto;
}
.house-list-item {
  height: 285rpx;
  display: flex;
}
.house-list-item-img image {
  width: 220rpx;
  height: 166rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
}
.house-list-item-info {
  height: 245rpx;
  margin-left: 21.4rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #E4E5EA;
  width: 450rpx;
}
.info-title {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #3F454B;
  letter-spacing: 0;
  text-align: justify;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.info-size {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9399A5;
  letter-spacing: 0;
  text-align: justify;
}
.info-location {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9399A5;
  letter-spacing: 0;
  text-align: justify;
  display: flex;
  align-items: center;
}
.info-location image {
  width: 25rpx;
  height: 26rpx;
}
.tag {
  height: 28rpx;
  width: 100rpx;
  margin-left: 10rpx;
}
.info-price {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FC3D4C;
  letter-spacing: 1px;
}
.info-price-small {
  font-size: 20rpx;
}